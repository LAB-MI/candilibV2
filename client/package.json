{
  "name": "back-office",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "cross-env CLIENT_BUILD_TARGET=ALL vue-cli-service build",
    "build:admin": "cross-env CLIENT_BUILD_TARGET=ADMIN vue-cli-service build",
    "build:candidat": "cross-env CLIENT_BUILD_TARGET=CANDIDAT vue-cli-service build",
    "format": "vue-cli-service lint",
    "lint": "vue-cli-service lint",
    "start": "npm run serve",
    "test": "npm run -s test:unit",
    "test:watch": "npm run -s test:unit -- --watch",
    "test:e2e": "vue-cli-service test:e2e",
    "test:unit": "vue-cli-service test:unit"
  },
  "dependencies": {
    "ag-grid-community": "^20.0.0",
    "ag-grid-vue": "^20.0.0",
    "delay": "^4.1.0",
    "luxon": "^1.10.0",
    "normalize.css": "^8.0.1",
    "p-debounce": "^1.0.0",
    "register-service-worker": "^1.5.2",
    "vue": "^2.5.22",
    "vue-property-decorator": "^7.3.0",
    "vue-router": "^3.0.1",
    "vue-scrollto": "^2.13.0",
    "vuetify": "^1.4.4",
    "vuex": "^3.1.0",
    "whatwg-fetch": "^3.0.0"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^3.3.0",
    "@vue/cli-plugin-e2e-cypress": "^3.3.0",
    "@vue/cli-plugin-eslint": "^3.3.0",
    "@vue/cli-plugin-pwa": "^3.3.0",
    "@vue/cli-plugin-unit-jest": "^3.3.0",
    "@vue/cli-service": "^3.3.1",
    "@vue/eslint-config-standard": "^4.0.0",
    "@vue/test-utils": "^1.0.0-beta.20",
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^23.6.0",
    "cross-env": "^5.2.0",
    "eslint": "^5.12.1",
    "eslint-plugin-vue": "^5.0.0",
    "node-sass": "^4.11.0",
    "postcss-current-selector": "0.0.3",
    "postcss-nested": "^4.1.1",
    "postcss-nested-ancestors": "^2.0.0",
    "postcss-nesting": "^7.0.0",
    "postcss-preset-env": "^6.5.0",
    "resolve-url-loader": "^3.0.0",
    "sass-loader": "^7.1.0",
    "stylus": "^0.54.5",
    "stylus-loader": "^3.0.2",
    "vue-cli-plugin-vuetify": "^0.4.6",
    "vue-template-compiler": "^2.5.22"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true,
      "jest": true
    },
    "parserOptions": {
      "parser": "babel-eslint"
    },
    "extends": [
      "plugin:vue/essential",
      "@vue/standard"
    ],
    "rules": {
      "jsx-quotes": [
        2,
        "prefer-double"
      ],
      "comma-dangle": [
        2,
        "always-multiline"
      ]
    }
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {},
      "postcss-preset-env": {},
      "postcss-nested-ancestors": {},
      "postcss-nested": {},
      "postcss-current-selector": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ],
  "jest": {
    "setupFiles": [
      "<rootDir>/tests/setup.js"
    ],
    "moduleFileExtensions": [
      "js",
      "jsx",
      "json",
      "vue"
    ],
    "transform": {
      "^.+\\.vue$": "vue-jest",
      ".+\\.(css|styl|less|sass|scss|svg|png|jpg|ttf|woff|woff2)$": "jest-transform-stub",
      "^.+\\.jsx?$": "babel-jest"
    },
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "snapshotSerializers": [
      "jest-serializer-vue"
    ],
    "testMatch": [
      "**/src/**/*.spec.js|**/tests/unit/**/*.spec.(js|jsx|ts|tsx)|**/__tests__/*.(js|jsx|ts|tsx)"
    ],
    "testURL": "http://localhost/"
  }
}
