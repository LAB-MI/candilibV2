{
  "name": "candilib",
  "version": "2.0.0-alpha.0",
  "description": "Réserver sa place d'examen pratique du permis de conduire",
  "main": "index.js",
  "scripts": {
    "prebuild": "npm run test",
    "build": "babel src -d dist",
    "db": "docker-compose -f docker-compose.dev.db.yml up -d",
    "db:down": "docker-compose -f docker-compose.dev.db.yml down",
    "build:all": "docker-compose -f docker-compose.prod.all.yml build",
    "dev-setup": "node dev-setup/index.js",
    "dev": "nodemon --inspect --watch src boot-dev.js",
    "format": "prettier-eslint --write 'src/**/*.js'",
    "lint:all": "run-p lint:client lint --",
    "lint:client": "cd .. ; cd client ; npm run lint",
    "lint:only": "eslint src",
    "prelint": "npm run format",
    "lint": "eslint src",
    "prestart": "npm run build",
    "start": "node dist/index.js",
    "start:prod": "node dist/index.js",
    "test:watch": "cross-env NODE_ENV=test jest --watch",
    "test:only": "cross-env NODE_ENV=test jest",
    "pretest": "npm run lint",
    "test:all": "run-s test test:client",
    "test:client": "cd .. ; cd client ; npm test",
    "test": "cross-env NODE_ENV=test jest --detectOpenHandles --forceExit",
    "jsdoc:watch": "nodemon --watch src --watch README.md --exec 'npm run jsdoc'",
    "jsdoc:serve": "browser-sync start --server --open --files out/**/* --ss out",
    "jsdoc-dev": "run-p jsdoc:*",
    "jsdoc": "jsdoc -c jsdoc-config.js -r src README.md"
  },
  "keywords": [
    "Candidat",
    "libre",
    "examen",
    "pratique",
    "permis",
    "conduire"
  ],
  "author": "Ministère de l'intérieur",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cross-env": "^6.0.3",
    "delay": "^4.3.0",
    "express": "^4.17.1",
    "express-fileupload": "^1.1.5",
    "fast-csv": "^3.4.0",
    "full-icu": "^1.3.0",
    "json2csv": "^4.5.4",
    "jsonwebtoken": "^8.5.1",
    "latinize": "^0.4.0",
    "luxon": "^1.19.3",
    "moment": "^2.24.0",
    "mongoose": "^5.7.5",
    "morgan": "^1.9.1",
    "nodemailer": "^6.3.1",
    "nodemailer-html-to-text": "^3.1.0",
    "nodemailer-smtp-transport": "^2.7.4",
    "sanitize-html": "^1.20.1",
    "stream-buffers": "^3.0.2",
    "uuid": "^3.3.3",
    "winston": "^3.2.1",
    "xlsx-stream-reader": "^1.1.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.6.4",
    "@babel/core": "^7.6.4",
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "@babel/polyfill": "^7.6.0",
    "@babel/preset-env": "^7.6.3",
    "@babel/register": "^7.6.2",
    "agent-base": "^4.3.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.0.3",
    "babel-jest": "^24.9.0",
    "babel-plugin-dynamic-import-node": "^2.3.0",
    "browser-sync": "^2.26.7",
    "dotenv": "^8.2.0",
    "eslint": "^6.5.1",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "html-loader": "^0.5.5",
    "husky": "^3.0.9",
    "jest": "^24.9.0",
    "jsdoc": "^3.6.3",
    "jsdoc-plugin-typescript": "^2.0.5",
    "lint-staged": "^9.4.2",
    "mongodb-memory-server": "^5.2.11",
    "nodemon": "^1.19.4",
    "npm-run-all": "^4.1.5",
    "prettier-eslint-cli": "^5.0.0",
    "regenerator-runtime": "^0.13.3",
    "supertest": "^4.0.2",
    "swagger-jsdoc": "^3.4.0",
    "swagger-ui-express": "^4.1.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test:all"
    }
  },
  "lint-staged": {
    "../**/*.{js,vue,htm,html,css,scss}": [
      "npm run lint:all",
      "git add"
    ]
  },
  "jest": {
    "collectCoverage": false,
    "collectCoverageFrom": [
      "**/*.{js,vue}",
      "!**/node_modules/**"
    ],
    "coverageReporters": [
      "html",
      "text-summary"
    ],
    "testMatch": [
      "<rootDir>/src/**/?(*.)(spec).{js,jsx,mjs}"
    ],
    "testEnvironment": "node",
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx|mjs)$"
    ]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "env": {
      "jest": true,
      "node": true
    },
    "extends": [
      "plugin:import/errors",
      "plugin:import/warnings",
      "standard"
    ],
    "plugins": [
      "import"
    ],
    "rules": {
      "import/no-unresolved": [
        2,
        {
          "commonjs": true,
          "amd": true
        }
      ],
      "import/named": 2,
      "import/namespace": 2,
      "import/default": 2,
      "import/export": 2,
      "jsx-quotes": [
        2,
        "prefer-double"
      ],
      "comma-dangle": [
        2,
        "always-multiline"
      ]
    }
  }
}
