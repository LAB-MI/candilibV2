{
  "name": "candilib",
  "version": "2.0.0-alpha.0",
  "description": "Réserver sa place d'examen pratique du permis de conduire",
  "main": "index.js",
  "scripts": {
    "build": "babel src -d dist",
    "prebuild": "npm run lint",
    "dev": "nodemon --inspect --watch src boot-dev.js",
    "format": "prettier-eslint --write 'src/**/*.js'",
    "lint:only": "eslint src",
    "prelint": "npm run format",
    "lint": "eslint src",
    "prestart": "npm run build",
    "start": "node dist/index.js",
    "start:prod": "node dist/index.js",
    "test:watch": "jest --watch",
    "test": "jest"
  },
  "keywords": [
    "Candidat",
    "libre",
    "examen",
    "pratique",
    "permis",
    "conduire"
  ],
  "author": "Ministère de l'intérieur",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "delay": "^4.1.0",
    "express": "^4.16.4",
    "jsonwebtoken": "^8.4.0",
    "latinize": "^0.4.0",
    "moment": "^2.23.0",
    "mongoose": "^5.4.0",
    "morgan": "^1.9.1",
    "nodemailer": "^5.0.0",
    "nodemailer-html-to-text": "^3.0.0",
    "nodemailer-smtp-transport": "^2.7.4",
    "winston": "^3.1.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.2.2",
    "@babel/polyfill": "^7.2.3",
    "@babel/preset-env": "^7.2.3",
    "@babel/register": "^7.0.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^23.6.0",
    "eslint": "^5.10.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-node": "^8.0.0",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "husky": "^1.2.1",
    "jest": "^23.6.0",
    "lint-staged": "^8.1.0",
    "nodemon": "^1.18.9",
    "prettier-eslint-cli": "^4.7.1",
    "regenerator-runtime": "^0.13.1",
    "supertest": "^3.3.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm test"
    }
  },
  "lint-staged": {
    "*.js": [
      "npm run lint -s",
      "git add"
    ]
  },
  "jest": {
    "setupFiles": [
      "<rootDir>/config/polyfills.js"
    ],
    "testMatch": [
      "<rootDir>/src/**/?(*.)(spec).{js,jsx,mjs}"
    ],
    "testEnvironment": "node",
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx|mjs)$"
    ]
  },
  "eslintConfig": {
    "env": {
      "jest": true,
      "node": true
    },
    "extends": [
      "standard"
    ],
    "rules": {
      "jsx-quotes": [
        2,
        "prefer-double"
      ],
      "comma-dangle": [
        2,
        "always-multiline"
      ]
    }
  }
}
